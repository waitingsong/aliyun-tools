{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./test/*"]
    },
    "target": "ES2022",
    "tsBuildInfoFile": ".tsbuildinfo"
  },
  "include": [
    "src/**/*.ts"
  ]
}
