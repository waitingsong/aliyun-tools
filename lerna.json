{
  "version": "independent",
  "packages": [
    "packages/*"
  ],
  "ignore": [
    "demo",
    "@mw-components/demo"
  ],
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md",
        ".githooks",
        ".scripts",
        ".vscode",
        "package-lock.json",
        "packages/demo",
        "packages/mw-demo"
      ],
      "verifyAccess": false
    },
    "version": {
      "conventionalCommits": true,
      "allowBranch": [
        "main",
        "fix",
        "release",
        "versioning_*"
      ],
      "ignoreChanges": [
        ".githooks",
        ".scripts",
        ".vscode",
        "package-lock.json",
        "packages/demo",
        "packages/mw-demo"
      ],
      "registry": "https://registry.npmjs.org/"
    }
  },
  "npmClient": "npm"
}
